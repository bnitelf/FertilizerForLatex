<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_task_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.puicbr.fertilizerforlatex.TaskDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <TextView
            android:text="ชื่อ"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"/>

        <TextView
            android:text="...งาน"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_name"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <TextView
            android:text="ที่อยู่"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"/>
        <TextView
            android:text="..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_area02"/>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:text="พื้นที่"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:textStyle="bold"/>

            <TextView
                android:text="... ไร่"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_rai"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:text="จำนวน"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:textStyle="bold"/>

            <TextView
                android:text="... ต้น"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_tree_amt" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:text="อายุต้น"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:textStyle="bold"/>

            <TextView
                android:text="... เดือน"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_tree_age" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <TextView
            android:text="วันที่เริ่มปลูก"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"/>

        <TextView
            android:text="xx/xx/xx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_start_date" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:text="สถานะการกรีดยาง"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"/>

        <TextView
            android:text="ยังไม่ได้กรีด"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_harvest_status"/>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:text="สูตรการให้ปุ๋ย"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:textStyle="bold"/>

            <TextView
                android:text="... "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_formula"/>

        </LinearLayout>

        <RadioGroup
            android:id="@+id/radGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:text="Before"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rad_before"
                android:layout_weight="1"
                android:checked="true" />

            <RadioButton
                android:text="After"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rad_after"
                android:layout_weight="1" />

        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:text="แก้ไขข้อมูล"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_edit" />

            <Button
                android:text="ดูรอบการให้ปู่ย"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_view_fertilizing_round" />

        </LinearLayout>

    </LinearLayout>
