<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="40dp"
    android:gravity="center"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    >

   <!-- android:paddingLeft="16dp"
    android:paddingRight="16dp"-->

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="1"
        android:id="@+id/txt_round"
        android:layout_weight="2"
        android:gravity="center"
        android:background="#60ff5d" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="2 เดือน"
        android:id="@+id/txt_tree_age"
        android:layout_weight="2"
        android:background="#eaff47"
        android:gravity="center_vertical" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="01-May-2017"
        android:id="@+id/txt_date"
        android:layout_weight="5"
        android:background="#ffc858"
        android:gravity="center_vertical" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="ยังไม่ใส่"
        android:id="@+id/txt_status"
        android:layout_weight="1"
        android:background="#ff9895"
        android:gravity="center_vertical" />

    <CheckBox
        android:id="@+id/chk_finish"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#ff9895"
        android:gravity="center_vertical"
        android:visibility="gone"/>
</LinearLayout>